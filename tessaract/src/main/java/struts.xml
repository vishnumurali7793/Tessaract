<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	<include file="/dashboard-config.xml" />
	<package name="default" extends="json-default">
	
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		
		<action name="redir" class="org.tesseract.action.LoginAction">
			<result name="success">/jsp/login.jsp</result>
		</action>

		<action name="login" class="org.tesseract.action.LoginAction" method="authenticateUser">
			<result name="success" type="tiles">goToHome</result>
<!-- 			<result name="success">/jsp/Home.jsp</result> -->
			<result name="input">/jsp/login.jsp</result>
		</action>

		<action name="logout" class="org.tesseract.action.LoginAction" method="logoutUser">
			<result name="success">/jsp/login.jsp</result>
		</action>

		<action name="goToTaxMaster" class="org.tesseract.action.RedirAction" method="goToTaxMaster">
			<result type="tiles" name="success">goToTax</result>
		</action>

		<action name="goToHome" class="org.tesseract.action.RedirAction" method="goToHome">
			<result name="success" type="tiles">goToHome</result>
<!-- 			<result name="success">/jsp/Home.jsp</result> -->
		</action>

		<action name="addTax" class="org.tesseract.action.MasterAction" method="addTax">
			<result name="success" type="redirectAction">goToTaxMaster</result>
			<result name="input" type="redirectAction">redir</result>
		</action>

		<action name="deleteTax" class="org.tesseract.action.MasterAction" method="deleteTax">
			<result name="success" type="redirectAction">goToTaxMaster</result>
		</action>

		<action name="goToCategory" class="org.tesseract.action.RedirAction" method="goToCategory">
			<result name="success" type="tiles">goToCategory</result>
		</action>

		<action name="saveCategory" class="org.tesseract.action.MasterAction" method="saveCategory">
			<result name="success" type="redirectAction">goToCategory</result>
			<result name="input" type="redirectAction">redir</result>
		</action>

		<action name="deleteCategory" class="org.tesseract.action.MasterAction" method="deleteCategory">
			<result name="success" type="redirectAction">goToCategory</result>
		</action>

		<action name="editCategory" class="org.tesseract.action.MasterAction" method="editCategory">
			<result name="success" type="tiles">goToCategory</result>
		</action>
		
		<action name="goToProduct" class="org.tesseract.action.RedirAction" method="goToProduct">
			<result name="success" type="tiles">goToProduct</result>
		</action>

		<action name="saveProduct" class="org.tesseract.action.MasterAction" method="saveProduct">
			<result name="success" type="redirectAction">goToProduct</result>
			<result name="input" type="redirectAction">redir</result>
		</action>

		<action name="deleteProduct" class="org.tesseract.action.MasterAction" method="deleteProduct">
			<result name="success" type="redirectAction">goToProduct</result>
		</action>

		<action name="editProduct" class="org.tesseract.action.MasterAction" method="editProduct">
			<result name="success" type="tiles">goToProduct</result>
		</action>
		
		<action name="goToModel" class="org.tesseract.action.RedirAction" method="goToModel">
			<result name="success" type="tiles">goToModel</result>
		</action>

		<action name="saveModel" class="org.tesseract.action.MasterAction" method="saveModel">
			<result name="success" type="redirectAction">goToModel</result>
			<result name="input" type="redirectAction">redir</result>
		</action>

		<action name="deleteModel"
			class="org.tesseract.action.MasterAction" method="deleteModel">
			<result name="success" type="redirectAction">goToModel</result>
		</action>

		<action name="editModel" class="org.tesseract.action.MasterAction" method="editModel">
			<result name="success" type="tiles">goToModel</result>
		</action>
		
		<action name="goToCarat" class="org.tesseract.action.RedirAction" method="goToCarat">
			<result name="success" type="tiles">goToCarat</result>
		</action>
		
		<action name="saveCarat" class="org.tesseract.action.MasterAction" method="saveCarat">
			<result name="success" type="redirectAction">goToCarat</result>
			<result name="input" type="redirectAction">redir</result>
		</action>
		
		<action name="deleteCarat" class="org.tesseract.action.MasterAction" method="deleteCarat">
			<result name="success" type="redirectAction">goToCarat</result>
		</action>
		
		<action name="editCarat" class="org.tesseract.action.MasterAction" method="editCarat">
			<result name="success" type="tiles">goToCarat</result>
		</action>
		
		<action name="goToRate" class="org.tesseract.action.RedirAction" method="goToRate">
			<result name="success" type="tiles">goToRate</result>
		</action>
		
		<action name="saveRate" class="org.tesseract.action.MasterAction" method="saveRate">
			<result name="success" type="redirectAction">goToRate</result>
			<result name="input" type="redirectAction">redir</result>
		</action>
		
		<action name="deleteRate" class="org.tesseract.action.MasterAction" method="deleteRate">
			<result name="success" type="redirectAction">goToRate</result>
		</action>
		
		<action name="editRate" class="org.tesseract.action.MasterAction" method="editRate">
			<result name="success" type="tiles">goToRate</result>
		</action>
		
		<action name="goToCustomer" class="org.tesseract.action.RedirAction" method="goToCustomer">
			<result name="success" type="tiles">goToCustomer</result>
		</action>
		
		<action name="saveCustomer" class="org.tesseract.action.MasterAction" method="saveCustomer">
			<result name="success" type="redirectAction">goToCustomer</result>
			<result name="input" type="redirectAction">redir</result>
		</action>
		
		<action name="deleteCustomer" class="org.tesseract.action.MasterAction" method="deleteCustomer">
			<result name="success" type="redirectAction">goToCustomer</result>
		</action>
		
		<action name="editCustomer" class="org.tesseract.action.MasterAction" method="editCustomer">
			<result name="success" type="tiles">goToCustomer</result>
		</action>
		
		<action name="goToVendor" class="org.tesseract.action.RedirAction" method="goToVendor">
			<result name="success">/jsp/vendor.jsp</result>
		</action>
		
		<action name="saveVendor" class="org.tesseract.action.MasterAction" method="saveVendor">
			<result name="success" type="redirectAction">goToVendor</result>
			<result name="input" type="redirectAction">redir</result>
		</action>
		
		<action name="deleteVendor" class="org.tesseract.action.MasterAction" method="deleteVendor">
			<result name="success" type="redirectAction">goToVendor</result>
		</action>
		
		<action name="editVendor" class="org.tesseract.action.MasterAction" method="editVendor">
			<result name="success">/jsp/vendor.jsp</result>
		</action>
		
		<action name="goToPurchase" class="org.tesseract.action.RedirAction" method="goToPurchase">
			<result name="success">/jsp/purchase.jsp</result>
		</action>
		
		<action name="getProductListForPurchase" class="org.tesseract.action.TransactionAction" method="getProductListForPurchase">
			<result name="success">/jsp/productListForPurchase.jsp</result>
		</action>
		
		<action name="getmodalForPurchase" class="org.tesseract.action.TransactionAction" method="getmodalForPurchase">
			<result name="success">/jsp/addnewvendor.jsp</result>
		</action>
		
		<action name="savepurchaseVendor" class="org.tesseract.action.TransactionAction" method="savepurchaseVendor">
			<result name="success" type="redirectAction">goToPurchase</result>
			<result name="input" type="redirectAction">redir</result>
		</action>
		
		<action name="getVendorDetails" class="org.tesseract.action.TransactionAction" method="getVendorDetails">
			<result type="json">
				<param name="root">vendorList</param>
			</result>
		</action>
		
		<action name="editPurchaseDetails" class="org.tesseract.action.TransactionAction" method="editPurchaseDetails">
			<result name="success">/jsp/editpurchase.jsp</result>
		</action>
		
		<action name="savepurchaseform" class="org.tesseract.action.TransactionAction" method="savepurchaseform">
			<result name="success" type="redirectAction">
				<param name="actionName">editPurchaseDetails</param>
				<param name="purchaseBean.purchaseId">${purchaseBean.purchaseId}</param>
			</result>
		</action>
		
		<action name="savepurchaseDetails" class="org.tesseract.action.TransactionAction" method="savepurchaseDetails">
			<result name="success" type="redirectAction">
				<param name="actionName">editPurchaseDetails</param>
				<param name="purchaseBean.purchaseId">${purchaseBean.purchaseId}</param>
			</result>
		</action>
		
		<action name="deletePurchase"
			class="org.tesseract.action.TransactionAction"
			method="deletePurchase">
			<result name="success" type="redirectAction">editPurchaseDetails</result>
		</action>
		<!-- purchase page finished -->
		<action name="goToSales"
			class="org.tesseract.action.RedirAction" method="goToSales">
			<result name="success">/jsp/salesBase.jsp</result>
		</action>
		<action name="getmodalForSales"
			class="org.tesseract.action.TransactionAction"
			method="getmodalForSales">
			<result name="success">/jsp/addnewsales.jsp</result>
		</action>
		<action name="getCustomerDetails"
			class="org.tesseract.action.TransactionAction"
			method="getCustomerDetails">
			<result type="json">
				<param name="root">customerList</param>
			</result>
		</action>
		<action name="savesalescustomer"
			class="org.tesseract.action.TransactionAction"
			method="savesalescustomer">
			<result name="success" type="redirectAction">goToSales</result>
			<result name="input" type="redirectAction">redir</result>
		</action>
		<action name="editsalesDetails"
			class="org.tesseract.action.TransactionAction"
			method="editsalesDetails">
			<result name="success">/jsp/editsales.jsp</result>
		</action>
		<action name="deletesalesdet"
			class="org.tesseract.action.TransactionAction"
			method="deletesalesdet">
			<result name="success" type="redirectAction">
				editsalesDetails
			</result>
		</action>
		<action name="getProductListForSales"
			class="org.tesseract.action.TransactionAction"
			method="getProductListForSales">
			<result name="success">/jsp/productListForSales.jsp</result>
		</action>
		<action name="saveSalesform"
			class="org.tesseract.action.TransactionAction" method="saveSalesform">
			<result name="success" type="redirectAction">
				<param name="actionName">editsalesDetails</param>
				<param name="salesBase.salesId">${salesBase.salesId}</param>
			</result>
		</action>
		<action name="saveSAlesDetails"
			class="org.tesseract.action.TransactionAction"
			method="saveSAlesDetails">
			<result name="success" type="redirectAction">
				<param name="actionName">editsalesDetails</param>
				<param name="salesBase.salesId">${salesBase.salesId}</param>
			</result>
		</action>
		<!-- sales page finished -->

		<!-- sales return page -->
		<action name="goToSalesReturn"
			class="org.tesseract.action.TransactionAction"
			method="goToSalesReturn">
			<result name="success">/jsp/salesReturn.jsp</result>
		</action>
		<action name="editsalesReturnDetails"
			class="org.tesseract.action.TransactionAction"
			method="editsalesReturnDetails">
			<result name="success">/jsp/editSalesReturn.jsp</result>
		</action>
		<action name="viewsalesReturnDetails"
			class="org.tesseract.action.TransactionAction"
			method="viewsalesReturnDetails">
			<result name="success">/jsp/viewSalesReturn.jsp</result>
		</action>

		<action name="saveSalesReturnDetails"
			class="org.tesseract.action.TransactionAction"
			method="saveSalesReturnDetails">
			<result name="success" type="redirectAction">
				<param name="actionName">viewsalesReturnDetails</param>
				<param name="salesBase.salesId">${salesBase.salesId}</param>
			</result>
		</action>
		<action name="deletesalesretdet"
			class="org.tesseract.action.TransactionAction"
			method="deletesalesretdet">
			<result name="success" type="redirectAction">
				editsalesReturnDetails
			</result>
		</action>
		<!-- sales return page completed -->

		<!-- purchase return page -->
		<action name="goToPurchaseReturn"
			class="org.tesseract.action.TransactionAction"
			method="getPurchaseListForPurchaseReturn">
			<result name="success">/jsp/PurchaseReturn.jsp</result>
		</action>
		<action name="getPurchaseditemByBill"
			class="org.tesseract.action.TransactionAction"
			method="getPurchaseditemByBill">
			<result name="success">/jsp/ItemListForPurchaseReturn.jsp</result>
		</action>
		<action name="updatePurchaseReturn"
			class="org.tesseract.action.TransactionAction"
			method="updatePurchaseReturn">
			<result name="success" type="redirectAction">
				<param name="actionName">getPurchaseditemByBill</param>
				<param name="purchaseBean.purchaseId">${purchaseBean.purchaseId}</param>
			</result>
		</action>
	</package>
</struts>